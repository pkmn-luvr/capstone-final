{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "UserUpdate",
    "type": "object",
    "properties": {
      "username": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "email": {
        "type": "string",
        "format": "email"
      },
      "password": {
        "type": "string",
        "minLength": 5
      },
      "userhemisphere": {
        "type": "string",
        "enum": ["north", "south"]
      },
      "profilephoto": {
        "type": "string",
        "format": "uri"
      },
      "bio": {
        "type": "string",
        "maxlength": 140
      }
    },
    "required": [],
    "additionalproperties": false
  }
  