{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UserAuth",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "password": {
      "type": "string",
      "minLength": 5
    }
  },
  "required": ["username", "password"],
  "additionalProperties": false
}
